<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SkyCast" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_200</item>
        <item name="colorPrimaryVariant">@color/primary_500</item>
        <item name="colorOnPrimary">@color/text_primary_dark</item>

        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <!-- Card View -->
        <item name="cardViewStyle">@style/CardStyleDark</item>

        <!-- Text fields -->
        <item name="textInputStyle">@style/TextInputStyleDark</item>
    </style>

    <style name="CardStyleDark" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="strokeColor">@color/divider_dark</item>
    </style>

    <style name="TextInputStyleDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_200</item>
    </style>
</resources>